<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5DA81"
    android:columnCount="1"
    android:contentDescription="@string/drei"
    tools:context="${packageName}.${activityClass}" >

    <EditText
        android:id="@+id/ipaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:ems="10"
        android:hint="@string/ip"
        android:inputType="text" >

        <requestFocus />
    </EditText>

    <ImageButton
        android:id="@+id/dose2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ipaddress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:background="@drawable/stecker"
        android:contentDescription="@string/zwei"
        android:src="@drawable/stecker" />

    <ImageButton
        android:id="@+id/dose3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/ipaddress"
        android:layout_alignTop="@+id/dose2"
        android:background="@drawable/stecker"
        android:contentDescription="@string/drei"
        android:src="@drawable/stecker" />

    <ImageButton
        android:id="@+id/dose1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ipaddress"
        android:layout_alignTop="@+id/dose2"
        android:background="@drawable/stecker"
        android:contentDescription="@string/eins"
        android:src="@drawable/stecker" />

    <ImageButton
        android:id="@+id/set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ipaddress"
        android:layout_toRightOf="@+id/ipaddress"
        android:background="@drawable/pfeil"
        android:contentDescription="@string/set"
        android:src="@drawable/pfeil" />

    <ImageButton
        android:id="@+id/restart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="39dp"
        android:background="@drawable/shutdown"
        android:contentDescription="@string/shutdown"
        android:src="@drawable/shutdown" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignRight="@+id/dose2"
        android:text="@string/zwei"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/dose1"
        android:layout_below="@+id/dose1"
        android:text="@string/eins"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/dose3"
        android:layout_below="@+id/dose3"
        android:layout_marginRight="9dp"
        android:text="@string/drei"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/restart"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp"
        android:paddingRight="10dp"
        android:text="@string/offline"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageButton
        android:id="@+id/refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/status"
        android:layout_toRightOf="@+id/status"
        android:background="@drawable/refresh"
        android:contentDescription="@string/refresh"
        android:src="@drawable/refresh" />

</RelativeLayout>