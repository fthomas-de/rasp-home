<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5DA81"
    android:contentDescription="@string/offline"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rasp_home.HomeFragment" >

    <EditText
        android:id="@+id/ipaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:hint="@string/ip_address"
        android:inputType="number" />

    <ImageButton
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ipaddress"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/ipaddress"
        android:background="@drawable/pfeil"
        android:contentDescription="@string/save_button"
        android:src="@drawable/pfeil" />

    <ImageButton
        android:id="@+id/dose2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ipaddress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="91dp"
        android:background="@drawable/stecker"
        android:contentDescription="@string/dose2"
        android:src="@drawable/stecker" />

    <ImageButton
        android:id="@+id/dose3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/dose2"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/dose2"
        android:background="@drawable/stecker"
        android:contentDescription="@string/dose3"
        android:src="@drawable/stecker" />

    <ImageButton
        android:id="@+id/dose1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/dose2"
        android:layout_marginRight="13dp"
        android:layout_toLeftOf="@+id/dose2"
        android:background="@drawable/stecker"
        android:contentDescription="@string/dose1"
        android:src="@drawable/stecker" />

    <ImageButton
        android:id="@+id/restart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
        android:background="@drawable/shutdown"
        android:contentDescription="@string/restart"
        android:src="@drawable/shutdown" />

    <ImageButton
        android:id="@+id/refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/status"
        android:layout_toRightOf="@+id/status"
        android:background="@drawable/refresh"
        android:contentDescription="@string/refresh"
        android:src="@drawable/refresh" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/restart"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="61dp"
        android:hint="@string/offline"
        android:text="@string/offline"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/d1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dose1"
        android:layout_below="@+id/dose1"
        android:layout_marginLeft="7dp"
        android:text="@string/d1" />

    <TextView
        android:id="@+id/d2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dose2"
        android:layout_below="@+id/dose2"
        android:layout_marginLeft="7dp"
        android:text="@string/d2" />

    <TextView
        android:id="@+id/d3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dose3"
        android:layout_below="@+id/dose3"
        android:layout_marginLeft="7dp"
        android:text="@string/d3" />

</RelativeLayout>
